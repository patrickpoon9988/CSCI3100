<style>
  .split {
    margin: 20px;
    height: 60%;
    width: 50%;
    position: fixed;
    z-index: 1;
    overflow-x: hidden;
    padding-top: 20px;
  }

  /* Control the left side */
  .left {
    left: 0;
    background-color: #111;
  }

  /* Control the right side */
  .right {
    right: 0;
    background-color: rgb(0, 255, 221);
  }

  /* If you want the content centered horizontally and vertically */
  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  /* Style the image inside the centered container, if needed */
  .centered img {
    width: 95%;
  }

  .atop {
    margin-bottom: 30px;
  }

  h6 {
    font-family: Arial, Helvetica, sans-serif !important;
  }

  button{
    width: 60px;
    padding-left: 6px !important;
    padding-right: 6px !important;
  }
  
</style>

<div class="split left">
  <div class="centered">
    <img src="images/{{data.imagePath}}" alt="Avatar woman">

  </div>
</div>

<div class="split right">
  <div class="centered">
    <h3><b>{{data.title}}</b></h3>
    <h6>Description: {{data.description}}</h6>

    <h6>Price: {{data.price}}</h6>
    <br>

    <form method="post" action="/itempage" style="display: inline;">
      <button class="btn btn-primary" type="submit" name="item">buy</button>
    </form>
    <a href="/shop"><button class="btn btn-primary atop" type="submit" name="back" style="margin-bottom: 0px !important; margin-left:70px">back</button></a>

  </div>
</div>