<body  background="/images/background.jpg"
    style=" background-repeat:no-repeat;background-attachment:fixed;background-size:cover;color:#fff;background-position:center">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>Login</h1>
            <div style="color:red; background-color:black"> {{{error}}}</div>
            <form action="/users/login" method="post">
                <div class="form-group">

                    <label for="email" style="font-size:1.5em">E-mail</label>
                    <input type="text" id="email" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password" style="font-size:1.5em">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary ">Login</button>
            </form>

        </div>
    </div>
</body>