        <div class="d-flex flex-column"> <span class="No.Product">Money</span> <span
        class="number2">{{data.Money}}</span> </div>
        <div class="d-flex flex-column"> <span class="No.Product">No.Product</span> <span
            class="number2">{{data.No_product}}</span> </div>
        <div class="d-flex flex-column"> <span class="Uploaded">Uploaded</span> <span
            class="number3">{{data.uploaded_product}}</span> </div>
      </div>
      {{/if}}



      {{#unless admin}}
      <div style="text-align: center;" class="p-2 mt-2 bg-primary d-flex justify-content-around rounded text-white stats">
        <div class="d-flex flex-column"> <span class="No.Product">No.Product</span> <span
            class="number2">{{data.No_product}}</span> </div>
        <div class="d-flex flex-column"> <span class="Uploaded">Uploaded</span> <span
            class="number3">{{data.uploaded_product}}</span> </div>
      </div>
      {{/unless}}
{{#if check}}
      <a href="/uploadItem">
      <button style=" 
                    color:black;
                    height:50px;
                    padding-right:30px;
                    margin-top:10px; 
                    border-radius: 15px ; 
                    background-color: #4CAF50; 
                    width: 100%;">
        Upload
      </button>
      </a>
{{/if}}
    </div>


