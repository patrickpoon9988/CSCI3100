<body background="/images/background.jpg"
    style="background-repeat:no-repeat;background-attachment:fixed;background-size:cover;color:#fff;background-position:center">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1 style="color: red;">Admin Login</h1>
            <b>
                <p style="color: red;">{{{error}}}</p>
            </b>
            <form action="/users/admin/login" method="post">
                <div class="form-group">

                    <label for="email" style="font-size:1.5em">Admin name</label>
                    <input type="text" id="email" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password" style="font-size:1.5em">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-danger">Admin Login</button>
            </form>

        </div>
    </div>
</body>